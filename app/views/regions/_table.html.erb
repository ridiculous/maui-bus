<%= content_tag(:div, html_options) do %>
    <h5 class="bus-schedule-header fl">Bus Stops</h5>
    <%= time_frames(route.full_class_name) %>
    <%= content_tag(:table, id: "#{route.full_class_name}_table", class: 'table table-striped table-hover bus-stops') do %>
        <%= content_tag(:tbody) do %>
            <% route.visible_stops.each do |vs| %>
                <tr>
                  <td style="max-width: 200px;font-size:12px;" class="row-header">
                    <% if Location[vs.location] %>
                        <%= link_to_static_map(vs.name, Location[vs.location].coords) %>
                    <% else %>
                        <%= vs.name %>
                    <% end %>
                  </td>
                  <% route.max_stop_length.times.each_with_index do |s, i| %>
                      <%= content_tag(:td, class: "#{route.full_class_name}-time-cell-#{i}") do %>
                          <%= in_format(Time.zone.parse(vs.times[s])) if vs.times[s] %>
                      <% end %>
                  <% end %>
                </tr>
            <% end %>
        <% end %>
    <% end %>
<% end %>